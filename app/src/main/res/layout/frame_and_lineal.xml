<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="220dp">


    <TextView
        android:id="@+id/window"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="75dp">
    </TextView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="110dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">


            <Button
                android:id="@+id/but_clean"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="AC"
                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="30dp">

            </Button>

            <Button
                android:id="@+id/but_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>

            <Button
                android:id="@+id/but_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>


            <Button
                android:id="@+id/but_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">


            <Button
                android:id="@+id/but_part"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="%"
                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="30dp">

            </Button>

            <Button
                android:id="@+id/but_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>

            <Button
                android:id="@+id/but_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>


            <Button
                android:id="@+id/but_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">



            </Button>

            <Button
                android:id="@+id/but_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="50dp">


            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <Button
                android:id="@+id/but_mult"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="*"
                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="30dp">

            </Button>

            <Button
                android:id="@+id/but_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>

            <Button
                android:id="@+id/but_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>


            <Button
                android:id="@+id/but_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <Button
                android:id="@+id/but_share"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="/"
                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="25dp">

            </Button>

            <Button
                android:id="@+id/but_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp">

            </Button>

            <Button
                android:id="@+id/but_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"

                android:textColor="@color/purple_700"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:textSize="50dp"
                tools:ignore="OnClick">

            </Button>


            <Button
            android:id="@+id/equally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="@color/teal_200"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="50dp">

        </Button>



        </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>