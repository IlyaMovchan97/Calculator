<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FrameLayoutStyle">


    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/LinearLayoutCompatStyle">

        <LinearLayout
            style="@style/LayoutButtonStyle">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_clean"
                style="@style/OperationButtonStyle"
                android:text="AC">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_7"
                style="@style/NumbButtonStyle"
                android:text="7">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_4"
                style="@style/NumbButtonStyle"
                android:text="4">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_1"
                style="@style/NumbButtonStyle"
                android:text="1">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_double_zero"
                style="@style/NumbButtonStyle"
                android:text="00">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>


        <LinearLayout
            style="@style/LayoutButtonStyle">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_part"
                style="@style/OperationButtonStyle"
                android:text="%">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_8"
                style="@style/NumbButtonStyle"
                android:text="8">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_5"
                style="@style/NumbButtonStyle"
                android:text="5">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_2"
                style="@style/NumbButtonStyle"
                android:text="2">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_zero"
                style="@style/NumbButtonStyle"
                android:text="0">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutButtonStyle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_mult"
                style="@style/OperationButtonStyle"
                android:text="*">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_9"
                style="@style/NumbButtonStyle"
                android:text="9">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_6"
                style="@style/NumbButtonStyle"
                android:text="6">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_3"
                style="@style/NumbButtonStyle"
                android:text="3">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_point"
                style="@style/NumbButtonStyle"
                android:text=".">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutButtonStyle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_back"
                style="@style/OperationButtonStyle"
                android:text="â†">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_share"
                style="@style/RightOperationButtonStyle"
                android:text="/">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_diff"
                style="@style/RightOperationButtonStyle"
                android:text="-">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_sum"
                style="@style/RightOperationButtonStyle"
                android:text="+">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equally"
                style="@style/RightOperationButtonStyle"
                android:text="=">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>



    <TextView
        android:id="@+id/numberField"
       style="@style/TextViewStyle"
        android:layout_marginTop="70dp"
        >

    </TextView>

    <TextView
        android:id="@+id/operationField"
        style="@style/TextViewStyle"
        >

    </TextView>


    <TextView
        android:id="@+id/resultField"
        style="@style/TextViewStyle"
        android:layout_marginTop="140dp">

    </TextView>




</FrameLayout>